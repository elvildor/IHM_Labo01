<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:PostIt.ViewModel"
                    xmlns:v="clr-namespace:PostIt.View">
    
    <DataTemplate DataType="{x:Type vm:PostItViewModel}">
        <v:PostItView/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:CategoryViewModel}">
        <v:CategoryView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CommandsViewModel}">
        <v:CommandsView/>
    </DataTemplate>

</ResourceDictionary>